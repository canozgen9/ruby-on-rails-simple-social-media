<%= form_for([@current_user, @current_user.posts.build],remote: true) do |f| %>
    <p>
      <%= f.label "What do you think now?" %><br>
      <%= f.text_area :body , class: 'form-control' %>
    </p>
    <p class="text-right">
      <%= f.submit "Create post", class: "btn btn-primary" %>
    </p>
<% end %>